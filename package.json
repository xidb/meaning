{
	"name": "Meaning",
	"version": "0.1.0",
	"description": "App to batch save lyrics to audio files",
	"main": "app/main.js",
	"scripts": {
		"start": "electron .",
	  	"package-all": "npm run package-win && npm run package-linux && npm run package-mac",
		"package-win": "npm run use-ffmpeg-linux && electron-forge package --platform win32 --verbose",
		"package-linux": "npm run use-ffmpeg-mac && electron-forge package --platform linux --verbose",
		"package-mac": "npm run use-ffmpeg-win && electron-forge package --platform darwin --verbose",
	  	"use-ffmpeg-win": "rm -rf app/bin && cp -r ffmpeg_static_bin/win64 app/bin",
	  	"use-ffmpeg-linux": "rm -rf app/bin && cp -r ffmpeg_static_bin/linux-x86_64 app/bin",
	  	"use-ffmpeg-mac": "rm -rf app/bin && cp -r ffmpeg_static_bin/mac-osx app/bin"
	},
	"repository": {},
	"author": "Dmitry Boytsov",
	"license": "MIT",
	"dependencies": {
		"electron-compile": "^6.4.2",
		"electron-window-state": "^4.1.1",
		"react": "^16.2.0",
		"react-dnd": "^2.5.4",
		"react-dnd-html5-backend": "^2.5.4",
		"react-dom": "^16.2.0"
	},
	"devDependencies": {
		"babel-plugin-transform-decorators-legacy": "^1.3.4",
		"babel-preset-stage-2": "^6.24.1",
		"electron-prebuilt-compile": "1.8.2-beta.3",
		"prop-types": "^15.6.0"
	},
	"config": {
		"forge": {
			"make_targets": {
				"win32": [
					"squirrel"
				],
				"darwin": [
					"zip"
				],
				"linux": [
					"deb",
					"rpm"
				]
			},
			"electronPackagerConfig": {
				"ignore": [
					".idea", ".gitignore", "ffmpeg_static_bin"
				]
			},
			"electronWinstallerConfig": {
				"name": "Meaning"
			},
			"electronInstallerDebian": {},
			"electronInstallerRedhat": {},
			"github_repository": {
				"owner": "",
				"name": ""
			},
			"windowsStoreConfig": {
				"packageName": "",
				"name": "Meaning"
			}
		}
	}
}
